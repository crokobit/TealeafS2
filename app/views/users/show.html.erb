<%= render 'shared/content_title', title: "Profile: #{@user.name}" %>

<div class="well">
  <dl class="dl-horizontal">
    <dt>Name:</dt>
    <dd><%= @user.name %></dd>
    <dt>Time zone:</dt>
    <dd><%= @user.time_zone %></dd>
    <dt>Two factor auth:</dt>
    <dd></dd>
    <dt>Phone:</dt>
    <dd></dd>
  </dl>
</div>

<h5><%= @user.name %>'s Activity</h5>

<ul class='nav nav-tabs'>

  <li class='<%= 'active' if params[:tab].nil? %>'>
    <%= link_to "Posts (#{current_user.posts.size})", user_path(@user)%>
  </li>

  <li class='<%= 'active' if params[:tab] == 'comments' %>'>
    <%= link_to "Comments (#{current_user.comments.size})", user_path(@user, tab: 'comments') %>
  </li>
</ul>

<% if params[:tab].nil? %>
  <%= render @user.posts %>
<% elsif params[:tab] == 'comments' %>
  <%= render @user.comments, show_post: true %>
<% end %>
