<%= render 'shared/content_title', title: 'Creat New Post'%>

<% if @post.errors.any? %>
  <div class = 'row'>
    <div class = 'alert-error span8'>
      <h5> Please fix the following errors: </h5>
      <u1>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= meg %></li>
        <% end %>
      </u1>
    </div>
  </div>
<% end %>

<div class = 'well'>
  <%= form_for @post do |f|%>
    <div class = 'control-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class = 'control-group'>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class = 'control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>
    <%= f.submit 'Create Post', class: 'btn btn-primary' %>
  <% end %>
</div>